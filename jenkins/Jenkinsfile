pipeline {
    agent any 
    stages {
        stage('Build - docker') { 
            steps {
                sh "bash ./jenkins/build.sh"
            }
        }
        stage('Test - pytest') { 
            steps {
                sh "bash ./jenkins/testing.sh"
            }
        }
        stage('Configure and Deploy - Ansible') { 
            steps {
                sh "bash ./jenkins/config-deploy.sh"
            }
        }
        stage('Email notification') {
            steps { 
                mail bcc: '', body: '''${env.PROJECT_NAME} - Build # ${env.BUILD_NUMBER} - ${env.BUILD_STATUS}: 
                Check console output at ${env.BUILD_URL} to view the results.''', cc: '', from: '', replyTo: '', subject: '${PROJECT_NAME} - Build # ${BUILD_NUMBER} - ${BUILD_STATUS}!', to: 'callumgoodley@googlemail.com'
            }
        }
    }
}
